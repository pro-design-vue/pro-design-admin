{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "types/**/*"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": ".",

    "noImplicitAny": false,
    "noUnusedLocals": false, //暂时定义为false
    "noUnusedParameters": false, //暂时定义为false

    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "allowJs": true,

    "lib": ["ES2020", "DOM", "DOM.Iterable", "ES2021.String"],
    "paths": {
      "@/*": ["./src/*"],
      "@core/*": ["./src/@core/*"]
    }
  }
}
